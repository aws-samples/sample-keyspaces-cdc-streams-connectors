<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>software.amazon.ssa</groupId>
    <artifactId>kcl-keyspaces-parent</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>

    <name>KCL Keyspaces Parent</name>
    <description>Parent project for KCL Keyspaces connector and examples</description>

    <modules>
        <module>kcl-keyspaces-core</module>
        <module>kcl-keyspaces-app</module>
        <module>s3-bucket-connector</module>
        <module>s3-vector-connector</module>
        <module>keyspaces-materialized-view-connector</module>
    </modules>

    <properties>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <kcl.version>3.1.2</kcl.version>
        <aws.sdk.version>2.33.0</aws.sdk.version>
        <slf4j.version>1.7.36</slf4j.version>
        <logback.version>1.2.12</logback.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>software.amazon.awssdk</groupId>
                <artifactId>bom</artifactId>
                <version>${aws.sdk.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.11.0</version>
                    <configuration>
                        <source>11</source>
                        <target>11</target>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>3.1.2</version>
                    <configuration>
                        <argLine>-Dnet.bytebuddy.experimental=true</argLine>
                        <argLine>--add-opens=java.base/java.nio=ALL-UNNAMED</argLine>
                    </configuration>
                </plugin>

                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>3.1.0</version>
                    <configuration>
                        <execArgs>
                            <execArg>--add-opens</execArg>
                            <execArg>java.base/java.nio=org.apache.arrow.memory.core,ALL-UNNAMED</execArg>
                            <execArg>--add-opens</execArg>
                            <execArg>java.base/sun.nio.ch=org.apache.arrow.memory.core,ALL-UNNAMED</execArg>
                        </execArgs>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project> 